{
  "name": "federated-attack-rest-api",
  "version": "0.0.0",
  "description": "REST API service for the ATT&CK Workspace.",
  "main": "index.js",
  "scripts": {
    "api:generate-md": "widdershins ./app/api/definitions/api.yml -o ./app/api/markdown/api.md --summary",
    "api:generate-html": "shins --root ./app/api/web -o ./app/api/web/index.html ./app/api/markdown/api.md",
    "api:generate-all": "npm run api:generate-md && npm run api:generate-html",
    "lint": "eslint .",
    "snyk": "snyk test --insecure",
    "start": "node ./bin/www",
    "test": "npm run test:api",
    "test:api": "mocha ./app/tests/api"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.2.0",
    "helmet": "^4.1.1",
    "mongoose": "^5.10.9",
    "morgan": "^1.10.0",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^7.11.0",
    "expect": "^26.5.3",
    "mocha": "^8.1.3",
    "mongodb-memory-server": "^6.9.2",
    "shins": "^2.6.0",
    "snyk": "^1.413.3",
    "supertest": "^5.0.0",
    "widdershins": "^4.0.1"
  }
}
